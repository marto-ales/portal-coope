{# templates/receipt/index.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Consulta de Recibos de Pago</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script async defer src="https://cdn.jsdelivr.net/npm/altcha/dist/altcha.min.js" type="module"></script>
</head>
<body class="bg-light">
    <div class="container my-5">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h1>Consulta de Recibos de Pago</h1>
                    </div>
                    <div class="card-body">
                        <form method="post" class="mb-4">
                            <div class="mb-3">
                                <label for="id_number" class="form-label">Documento:</label>
                                <input type="text" id="id_number" name="id_number" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Correo electr√≥nico:</label>
                                <input type="text" id="email" name="email" class="form-control" required>
                            </div>
                            <altcha-widgetchallengeurl="https://eu.altcha.org/api/v1/challenge?apiKey=ckey_01b1ae1263b0ce2540e7d3578d06">
                            </altcha-widget>
                            <button type="submit" class="btn btn-primary w-100">Consultar</button>
                        </form>

                        {% if transfer %}
                            <h2>Recibos por transferencia</h2>
                            <p>Nombre: {{ transfer[0].name }}</p>
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Recibo</th>
                                        <th scope="col">Estudiante</th>
                                        <th scope="col">Item</th>
                                        <th scope="col">Observaciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for item in transfer %}
                                    <tr>
                                        <td><a href="/drive/file/{{ item.receiptFile }}">Descargar</a></td>
                                        <td>{{ item.student }}</td>
                                        <td>{{ item.item }}</td>
                                        <td>{{ item.desc }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p>No se encontraron recibos por transferencia con los datos ingresados</p>
                        {% endif %}

                        {% if box %}
                            <h2>Recibos por sobre</h2>
                            <p>Nombre: {{ box[0].name }}</p>
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Recibo</th>
                                        <th scope="col">Estudiante</th>
                                        <th scope="col">Mes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for item in box %}
                                    <tr>
                                        <td><a href="/drive/file/{{ item.receiptFile }}">Descargar</a></td>
                                        <td>{{ item.student }}</td>
                                        <td>{{ item.month }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p>No se encontraron recibos por sobre con los datos ingresados</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
